{% extends 'base.html.twig' %}

{% block title %}Dashboard Admin {{parent()}}{% endblock %}

{% block body %}
    <div class="container card">
        <div class="title">
            <h1>Dashboard</h1>
            <a href="{{ path('app_logout') }}" class="btn-title">Déconnexion<i class="fa-solid fa-arrow-right-from-bracket"></i></a>
        </div>
        <p>Nombre de clients : {{NbUsers}}</p>
        <div class="table">
            <table>
                <thead>
                    <tr>
                        <th>Nom client</th>
                        <th>Slug</th>
                        <th>Date de création</th>
                        <th>Email</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr>
                            <td data-label="Nom client">{{user.pseudo}}</td>
                            <td data-label="Slug">{{user.slug}}</td>
                            <td data-label="Date de création">{{ user.createdAt|date('d/m/Y') }}</td>
                            <td data-label="Email">{{user.email}}</td>
                            <td>
                                <a href="{{ path('app_landing', {slug: user.slug}) }}"><i class="fa-regular fa-eye"></i></a>
                                <a href="{{ path('app_deleteUserAdmin', {id: user.id}) }}"><i class="fa-solid fa-trash-can"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}